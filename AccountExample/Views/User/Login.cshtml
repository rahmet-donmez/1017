@using AccountExample.Models.Users
@model LoginViewModel
@{
    ViewData["Title"] = "Giriş";
    Layout = "_HomeLayout";
}

<style>
    html, body {
        height: 100%; 
        margin: 0; 
    }

    .container-fluid {
        display: flex; 
        justify-content: center;
        align-items: center; 
        height: 100vh; 
        padding: 20px; 
    }

    .card {
        width: 200%; 
        max-width: 400px; 
        border-radius: 15px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        padding: 20px; 
    }

    .form-button {
        display: flex; 
        justify-content: center; 
        margin-top: 20px; 
    }
</style>

<div class="content" style="background-color:lightgrey">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <h4 class="form-button" style="color:purple">Kullanıcı Girişi</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="login" method="post" asp-controller="user">
                            <div class="form-group">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserName">Kullanıcı Adı</label>
                                <input asp-for="UserName" class="form-control" placeholder="Email, telefon ya da TC girin" id="userName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Şifre</label>
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control" placeholder="Şifre Girin" id="password" type="password" />
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="togglePassword" style="cursor: pointer;color: rebeccapurple;">
                                            <i class="fa fa-eye" id="eyeIcon"></i>
                                        </span>
                                    </div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>



                            <div class="form-button">
                                <button type="submit" class="btn btn-info btn-fill" style="background-color:rebeccapurple;">Giriş Yap</button>
                            </div>                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('togglePassword').onclick = function () {
        const passwordField = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');
        const isPassword = passwordField.type === "password";

        passwordField.type = isPassword ? "text" : "password";
        eyeIcon.classList.toggle("fa-eye", isPassword);
        eyeIcon.classList.toggle("fa-eye-slash", !isPassword);
    };
</script>