@using AccountManagment.Core.Models
@model List<Transfer>

<!DOCTYPE html>
<html lang="en">


<body>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card strpied-tabled-with-hover">
                        <div class="card-header ">
                            <h4 class="card-title">Hesaplar</h4>
                            <p class="card-category">Here is a subtitle for this table</p>
                        </div>
                        <div class="card-body table-full-width table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                <th>İşlem Tutarı</th>
                                <th>İlgili Hesap Numarası</th>
                                <th>Alıcı Adı</th>
                                <th>Alıcı İban</th>
                                <th>Açıklama</th>
                                <th>İşlem Tarihi</th>

                                </thead>
                                <tbody>
                                    @foreach (var transfer in Model)
                                    {
                                        <tr>
                                            <td>@transfer.Amount ₺</td>
                                            <td>@transfer.SourceAccount.Number</td>
                                            <td>@transfer.TargetAccount.User.Name @transfer.TargetAccount.User.Surname</td>
                                            <td>@transfer.TargetAccount.Iban</td>
                                            <td>@transfer.Description</td>
                                            <td>@transfer.CreatedDate</td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
