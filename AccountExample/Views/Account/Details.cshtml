@using AccountExample.Models.Accounts
@model AccountDetailWithTransacitonViewModel

<!DOCTYPE html>
<html lang="en">
<body>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card strpied-tabled-with-hover" style="border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="card-header" style=" border-radius: 15px 15px 0 0;">
                            <h4 class="card-title">Hesap Hareketleri</h4>
                        </div>
                        <div class="card-body table-full-width table-responsive">
                            <table class="table table-hover table-striped" style="border-radius: 10px; overflow: hidden;">
                                <thead style="background-color: rebeccapurple; color: white;">
                                <th style="color: white;">İşlem Detayı</th>
                                <th style="color: white;">İşlem Tutarı</th>
                                <th style="color: white;">İşlem Tarihi</th>
                                <th style="color: white;">İşlem Yönü</th>

                                </thead>
                                <tbody>

                                    @foreach (var transaction in Model.AccountTransacitons)
                                    {
                                        <tr>
                                            
                                            <td>@transaction.Description</td>
                                            <td>@transaction.Amount ₺</td>
                                            <td>@transaction.CreatedDate</td>
                                            <td>
                                                <span style="color: @(transaction.Direction ? "green" : "red");">
                                                    @if (transaction.Direction)
                                                    {
                                                        <i class="fas fa-arrow-up" aria-hidden="true"></i>
                                                        <span>Gelen</span>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-arrow-down" aria-hidden="true"></i>
                                                        <span>Giden</span>
                                                    }
                                                </span>


                                            </td>
                                        </tr>


                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-user" style="border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px;">
                        <div class="card-image">
                            <img src="~/icon/account-backgraound.jpg" alt="...">
                        </div>
                        <div class="card-body">
                            <div class="author">

                                    <img class="avatar border-gray" src="~/icon/account.png" alt="...">

                                <h5 class="title"> <b style="color:purple">@Model.AccountDetail.Balance ₺</b> </h5>


                                <p class="description">

                                    <span style="color: @(Model.AccountDetail.IsActive ? "green" : "red");">
                                        @if (Model.AccountDetail.IsActive)
                                        {
                                            <span>Aktif</span>
                                        }
                                        else
                                        {
                                            <span>Pasif</span>
                                        }
                                    </span>
                                </p>
                            </div>
                            <p class="description text-center">
                                <label>Hesap Numarası: </label> @Model.AccountDetail.Number
                                <br>
                                <label>Iban: </label> @Model.AccountDetail.Iban
                                <br>
                                <label>Hesap Tipi: </label> @Model.AccountDetail.Type
                                <br>

                                <label>Oluşturulma Tarihi: </label> @Model.AccountDetail.CreatedDate
                                <br>

                            </p>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</body>

</html>
